<h2>새 글을 쓰는 페이지입니다.</h2>

<form action="/home/create" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    제목: <input type="text" name="post_title"><br>
    내용: <textarea name="post_content"></textarea><br>
    <input type="submit" value="작성">
    
</form>

<!--form_helper-->
<!--form_tag-->
<%= form_tag(posts_path) do%>
    <%=label_tag 'post_title','제목' %>
    <%=text_field_tag('post_title',nil) %><br>
    <%=label_tag 'post_content','내용' %>
    <%=text_area_tag('post_content',nil)%><br>
    <%=submit_tag '작성'%>
<%end%>

<!--form_for-->
<%=form_for(@post, url:posts_path, method: 'post')  do |f| %>
    <%=f.label :title, '제목'%>
    <%=f.text_field :title%> <br>
    
    <%=f.label :text, '내용'%>
    <%=f.text_area :text%> <br>
    <%=f.submit '작성'%>
<%end%>