<%= params%>
<h2>글 수정하는 페이지입니다.</h2>

<form action="/home/update/<%=@post.id%>" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    제목: <input type="text" name="post_title"value="<%=@post.title%>"><br>
    내용: <textarea name="post_content"><%=@post.text%></textarea><br>
    <input type="submit" value="작성">
    
</form>

<!--form helper-->
<!--form_tag-->
formtag
<%= form_tag(post_path, method:"patch") do%>
    <%=label_tag 'post_title','제목' %>
    <%=text_field_tag('post_title',@post.title) %><br>
    <%=label_tag 'post_content','내용' %>
    <%=text_area_tag('post_content',@post.text)%><br>
    <%=submit_tag '작성'%>
<%end%>

formfor
<!--form_for-->
<%=form_for(@post)  do |f| %>
    <%=f.label :title, '제목'%>
    <%=f.text_field :title%><br>
    
    <%=f.label :text, '내용'%>
    <%=f.text_area :text%><br>
    <%=f.submit '작성'%>
<%end%>
render
<%= render 'form'%>
<a href="/">뒤로가기</a>